<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pinup.backend.notice.query.mapper.NoticeMapper">

    <select id="getNoticeList" resultType="pinup.backend.notice.query.dto.NoticeListResponse">
        SELECT notice_id, notice_title, created_at
        FROM notice
    </select>

    <select id="getNoticeSpecific" parameterType="java.lang.Integer" resultType="pinup.backend.notice.query.dto.NoticeSpecificResponse">
        SELECT notice_id, admin_id, notice_title, notice_content, created_at, updated_at
        FROM notice
        WHERE notice_id = #{noticeId}
    </select>

</mapper>
